<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:minHeight="64dp">

    <ImageView
        android:id="@+id/mtrl_list_item_icon"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:padding="16dp"
        android:src="@mipmap/lobby2"
        />

    <TextView
        android:id="@+id/lobbyRowName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/mtrl_list_item_icon"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/mtrl_list_item_icon_genre"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toEndOf="@id/mtrl_list_item_icon"
        android:layout_below="@id/lobbyRowName"
        android:layout_above="@+id/partecipantNumberRow"
        android:src="@drawable/ic_music_note_black_24dp"
        />

    <TextView
        android:id="@+id/genreOrMoodRow"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/lobbyRowName"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/mtrl_list_item_icon_genre"
        android:paddingEnd="16dp"
        android:paddingStart="4dp"
        android:maxLines="2"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/mtrl_list_item_icon_number"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/genreOrMoodRow"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/mtrl_list_item_icon"
        android:src="@drawable/ic_headset_black_24dp" />

    <TextView
        android:id="@+id/partecipantNumber"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_below="@id/genreOrMoodRow"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/mtrl_list_item_icon_number"
        android:maxLines="2"
        android:text="Partecipanti:"
        android:paddingStart="4dp"
        android:layout_marginTop="2dp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/partecipantNumberRow"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/genreOrMoodRow"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/partecipantNumber"
        android:maxLines="2"
        android:paddingStart="2dp"
        android:layout_marginTop="2dp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/black" />

</RelativeLayout>

